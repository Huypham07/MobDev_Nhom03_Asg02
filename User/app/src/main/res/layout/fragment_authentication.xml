<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.recovery.auth.AuthenticationFragment"
        android:background="#FAFAFA"
        android:id="@+id/auth"
        android:orientation="vertical">
    <TextView
            android:text="Chúng tôi sẽ gửi mã đến abc@gmail.com.\nHãy nhập mã để xác thực tài khoản. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="15sp"
            android:layout_marginStart="38dp" android:textColor="#000000" android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" android:lineSpacingExtra="10sp" android:layout_marginEnd="38dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:id="@+id/input_code" android:hint="Mã xác thực"
            android:background="@drawable/background_white_round_rectangle_medium_radius" android:elevation="2dp"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:textSize="15sp"
            android:padding="16dp" android:maxLines="1"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="12dp">
        <TextView
                android:text="Hiệu lực: 30s"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content" android:id="@+id/validity_period" android:layout_marginStart="30dp"
                android:textSize="15sp" android:layout_alignParentTop="true"/>
        <TextView
                android:text="Sai mã xác thực"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wrong_code"
                android:layout_alignParentRight="false" android:layout_alignParentStart="true"
                android:layout_marginStart="30dp" android:textColor="@color/red" android:visibility="invisible"/>
        <TextView
                android:text="Gửi lại mã"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/countdown"
                android:textColor="#80000000"
                android:textSize="15sp" android:textStyle="italic"
                android:layout_marginRight="30dp" android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <Button
            android:text="Tiếp tục"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/reset_password_button"
            android:elevation="4dp" android:textSize="18sp" android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" android:layout_marginTop="30dp"/>
</LinearLayout>