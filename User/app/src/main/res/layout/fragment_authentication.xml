<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.recovery.auth.AuthenticationFragment"
        android:background="#FAFAFA"
        android:id="@+id/auth"
        android:orientation="vertical">
    <TextView
            android:text="Chúng tôi sẽ gửi tin nhắn đến abc@gmail.com.\nHãy kiểm tra email để đặt lại mật khẩu."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/noti" android:textSize="15sp"
            android:layout_marginStart="38dp"
            android:textColor="#000000" android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp" android:lineSpacingExtra="10sp" android:layout_marginEnd="38dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="12dp">
        <TextView
                android:text="Gửi lại mã"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/countdown"
                android:textColor="@color/textGrey"
                android:textSize="15sp" android:textStyle="italic"
                android:layout_marginRight="30dp" android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <Button
            android:text="Tiếp tục"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/reset_password_button"
            android:elevation="4dp" android:textSize="18sp" android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" android:layout_marginTop="30dp"/>
</LinearLayout>