<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.booking.process.SuccessFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_line"
            android:padding="20dp"
            android:src="@drawable/pay_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán thành công ✓"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vui lòng xem thông tin chi tiết vé ở mục 'Vé của tôi'"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoàn tất"
        android:textSize="16sp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"/>
</FrameLayout>