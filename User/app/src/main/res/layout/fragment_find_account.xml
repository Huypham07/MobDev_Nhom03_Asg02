<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.recovery.findAccount.FindAccountFragment"
        android:background="#FAFAFA" android:orientation="vertical">

    <TextView
            android:text="Vui lòng nhập số di động của bạn."
            android:inputType="phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/instruction" android:textSize="15sp"
            android:layout_marginStart="38dp" android:textColor="#000000" android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" android:layout_marginEnd="38dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="phone"
            android:id="@+id/input" android:hint="Số di động"
            android:background="@drawable/background_white_round_rectangle_medium_radius" android:elevation="2dp"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:textSize="15sp"
            android:padding="16dp" android:maxLines="1"/>
    <Button
            android:text="Tiếp tục"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/authenticate_button"
            android:elevation="4dp" android:textSize="18sp" android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" android:layout_marginTop="30dp"/>
    <TextView
            android:text="Tìm kiếm bằng email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/change_input_type"
            android:layout_gravity="center_horizontal" android:layout_marginTop="20dp" android:textColor="#000000"
            android:textSize="15sp"/>
</LinearLayout>