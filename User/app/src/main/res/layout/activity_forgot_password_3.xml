<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPasswordActivity1" android:background="#FAFAFA" android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize" android:elevation="4dp" android:background="#FFFFFF">
        <ImageView
                android:src="@tools:sample/avatars"
                android:layout_width="30dp"
                android:layout_height="30dp" android:id="@+id/backbtn"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp" app:srcCompat="@drawable/baseline_arrow_back_ios_new_24"
                app:tint="#23A8F3" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Đặt lại mật khẩu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:layout_gravity="center_vertical" android:textStyle="bold" android:textSize="18sp"
                android:textColor="#000000"/>
    </LinearLayout>
    <TextView
            android:text="Vui lòng đặt lại mật khẩu mới."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="15sp"
            android:layout_marginStart="38dp" android:textColor="#000000" android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" android:lineSpacingExtra="10sp" android:layout_marginEnd="38dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editTextTextPassword" android:hint="Mật khẩu mới"
            android:background="@drawable/background_white_round_rectangle_medium_radius" android:elevation="2dp"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:textSize="15sp"
            android:padding="16dp" android:inputType="textPassword" android:drawableRight="@drawable/hide_password_icon"
            android:maxLines="1"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editTextTextPassword2" android:hint="Xác nhận mật khẩu mới"
            android:background="@drawable/background_white_round_rectangle_medium_radius" android:elevation="2dp"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:layout_marginTop="20dp" android:textSize="15sp"
            android:padding="16dp" android:inputType="textPassword" android:drawableRight="@drawable/hide_password_icon"
            android:maxLines="1"/>
    <Button
            android:text="Tiếp tục"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:elevation="4dp" android:textSize="18sp" android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" android:layout_marginTop="30dp"
            android:backgroundTint="#23A8F3"/>
</LinearLayout>