<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".LoginActivity" android:orientation="vertical" android:background="#FFFFFF">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize" android:elevation="4dp" android:background="#FFFFFF">
        <TextView
                android:text="Đăng nhập"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:layout_gravity="center_vertical" android:textStyle="bold" android:textSize="18sp"
                android:textColor="#000000" android:layout_marginStart="30dp"/>
    </LinearLayout>
    <ImageView
            android:src="@tools:sample/avatars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/imageView"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingEnd="40dp" android:paddingStart="40dp"
            android:layout_marginTop="40dp">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <TextView
                        android:text="Email hoặc số điện thoại"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView5" android:textColor="#000000"
                        android:textSize="16sp" android:layout_marginBottom="8dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress|phone"
                        android:hint="Email/ Số điện thoại"
                        android:id="@+id/editTextText2" android:minHeight="48dp" android:maxLines="1"/>
            </LinearLayout>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="16dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <TextView
                        android:text="Mật khẩu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView7" android:shadowColor="#000000"
                        android:textSize="16sp" android:layout_marginBottom="8dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="Mật khẩu"
                        android:id="@+id/editTextText3"
                        android:drawableRight="@drawable/hide_password_icon" android:minHeight="48dp"
                        android:maxLines="1"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <Button
            android:text="ĐĂNG NHẬP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button3" android:backgroundTint="#23A8F3"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp" android:layout_marginTop="30dp"
            android:textSize="18sp" android:padding="12dp"/>
    <TextView
            android:text="Quên mật khẩu?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" android:layout_marginTop="20dp" android:layout_gravity="center_horizontal"
            android:textSize="16sp" android:textStyle="italic" android:textColor="#000000"/>
    <TextView
            android:text="Hoặc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" android:layout_marginTop="20dp" android:layout_gravity="center_horizontal"
            android:textSize="16sp" android:textColor="#23A8F3"/>
    <Button
            android:text="ĐĂNG KÝ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button4" android:backgroundTint="#FFDFCD"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp" android:layout_marginTop="30dp"
            android:textSize="18sp" android:padding="12dp" android:textColor="#000000"/>
</LinearLayout>