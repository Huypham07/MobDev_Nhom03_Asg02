<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.recovery.reset.ResetPasswordFragment"
        android:background="#FAFAFA"
        android:orientation="vertical">
    <TextView
            android:text="Vui lòng nhập lại thông tin tài khoản."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="15sp"
            android:layout_marginStart="38dp" android:textColor="#000000" android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" android:lineSpacingExtra="10sp" android:layout_marginEnd="38dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/id" android:hint="Email hoặc số điện thoại"
            android:background="@drawable/background_white_round_rectangle_medium_radius" android:elevation="2dp"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:textSize="15sp"
            android:padding="16dp" android:inputType="text"
            android:maxLines="1"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/password" android:hint="Mật khẩu"
            android:background="@drawable/background_white_round_rectangle_medium_radius" android:elevation="2dp"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:layout_marginTop="20dp" android:textSize="15sp"
            android:padding="16dp" android:inputType="textPassword" android:drawableRight="@drawable/hide_password_icon"
            android:maxLines="1"/>

    <TextView
        android:id="@+id/wrong_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sai mật khẩu!"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
            android:text="Tiếp tục"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/finish_reset_password"
            android:elevation="4dp" android:textSize="18sp" android:layout_marginStart="30dp"
            android:enabled="false"
            android:layout_marginEnd="30dp" android:layout_marginTop="30dp"/>
</LinearLayout>